<h2> カート登録ページ </h2>
<%= form_for @cartitem , url: {action: :create} do |f| %>
    商品名：<%= Product.find(@cartitem.product_id).name %><br>
    価格　：<%= Product.find(@cartitem.product_id).price %><br>
    <%= f.label :qty, '数量' %>
    <%= f.number_field :qty %><br>
    <%= f.hidden_field :product_id %>
    <%= f.submit 'カートに入れる' %>
<% end %>